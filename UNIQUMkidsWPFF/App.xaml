<Application x:Class="UNIQUMkidsWPFF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UNIQUMkidsWPFF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Page">
            <Setter Property="Width" Value="795"/>
            <Setter Property="Width" Value="1200"/>
        </Style>
        <Style TargetType="TextBlock" >
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#24AAE1"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0 0 0 2"></Setter>
            <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="BorderBrush" Value="#F3863B"></Setter>
            <Setter Property="Background" Value="#764187"></Setter>
            <Setter Property="Foreground" Value="#FFf"></Setter>
            <Setter Property="FontSize" Value="36"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="BorderThickness" Value="0 0 0 2"></Setter>
            <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="BorderBrush" Value="#F3863B"></Setter>
            <Setter Property="Background" Value="#764187"></Setter>
            <Setter Property="Foreground" Value="#FFF"></Setter>
        </Style>
        <Style TargetType="Grid" >
            <Setter Property="Background" Value="#FFF"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#FFF"/>
            <Setter Property="Background" Value="#764187"/>
            <Setter Property="BorderBrush" Value="#AD7261"/>

            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="Width" Value="300"></Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20"
                                Background="{TemplateBinding Background}">

                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE6714F"></Setter>
                </Trigger>
            </Style.Triggers>

        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#FAB7A4"/>

        </Style>

        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="25" />
        </Style>
    </Application.Resources>
</Application>
