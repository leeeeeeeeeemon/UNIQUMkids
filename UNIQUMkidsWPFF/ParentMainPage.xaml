<Page x:Class="UNIQUMkidsWPF.ParentMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:hamburgerMenu="clr-namespace:HamburgerMenu;assembly=HamburgerMenu"
      xmlns:local="clr-namespace:UNIQUMkidsWPF"
      mc:Ignorable="d" 
      d:DesignHeight="795" d:DesignWidth="800"
      Title="ParentMainPage">

    <Grid>
        <TextBox x:Name="tb_Description" Background="White" Foreground="#24AAE1" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" 
          FontSize="12" BorderBrush="White" FontWeight="Bold" Visibility="Visible">

        </TextBox>
        <hamburgerMenu:HamburgerMenu Background="Blue"   MenuIconColor="Red" SelectionIndicatorColor="White" MenuItemForeground="Red" HorizontalAlignment="Left">
            <hamburgerMenu:HamburgerMenuItem x:Name="hambMenu" Text="Home" SelectionCommand="{Binding MyCommand}" />
            <hamburgerMenu:HamburgerMenuItem Text="Search" Selected="HamburgerMenuItem_Selected"/>
        </hamburgerMenu:HamburgerMenu>
        
        
    </Grid>

</Page>
